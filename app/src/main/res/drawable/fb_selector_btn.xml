<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorAccent"/>
                    <size android:width="@dimen/spacing_large_56"
                          android:height="@dimen/spacing_large_56"/>
                </shape>
            </item>
            <item android:bottom="@dimen/spacing_normal_16"
                  android:drawable="@drawable/ic_fb_24"
                  android:left="@dimen/spacing_normal_16"
                  android:right="@dimen/spacing_normal_16"
                  android:top="@dimen/spacing_normal_16"/>
        </layer-list>
    </item>

    <!--The next item could have the attribute "android:stack_enabled"-->
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/social_btn_background"/>
                    <size android:width="@dimen/spacing_large_56"
                          android:height="@dimen/spacing_large_56"/>
                </shape>
            </item>
            <item android:bottom="@dimen/spacing_normal_16"
                  android:drawable="@drawable/ic_fb_24"
                  android:left="@dimen/spacing_normal_16"
                  android:right="@dimen/spacing_normal_16"
                  android:top="@dimen/spacing_normal_16"/>
        </layer-list>
    </item>
</selector>